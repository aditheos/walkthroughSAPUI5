<mvc:View controllerName="eprs.walkthrough.app.controller.Hello" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<Button id="sayHelloDialog" text="{i18n>sayHelloDialog}" icon="sap-icon://popup-window" press="onSayHelloDialog" class="sapUiSmallMarginEnd"/>
		<Button id="sayHello" text="{i18n>sayHello}" press="onSayHello" class="sapUiSmallMarginEnd"/>
		<Input id="helloWorld" value="{/recepient/name}" width="50%"/>
		<Text id="helloText" text="Hello {/recepient/name}" class="sapUiSmallMargin myCustomText"/>
	</Panel>
</mvc:View>